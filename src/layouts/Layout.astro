---
import Navbar from '~components/layout/Navbar.astro'

interface Props {
    title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
    <head>
        <!-- TODO: Improve SEO overtime. -->
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />

        <!-- Metadata -->
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
        <meta name="description" content="Astro description" />
        <link rel="sitemap" href="/sitemap-index.xml" />

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap"
            rel="stylesheet"
        />
        <link
            href="https://api.fontshare.com/v2/css?f[]=satoshi@1,900,700,500,301,701,300,501,401,901,400,2&display=swap"
            rel="stylesheet"
        />
        <script
            src="https://kit.fontawesome.com/018f5d4b94.js"
            crossorigin="anonymous"></script>
    </head>
    <body>
        <Navbar />
        <slot />
    </body>
</html>
<style lang="scss" is:global>
    * {
        font-family: var(--primary-font);
        padding: 0;
        margin: 0;
    }

    html,
    body {
        color: white;
        background-color: #121418;

        &::-webkit-scrollbar {
            width: 12px;
        }

        &::-webkit-scrollbar-track {
            background-color: transparent;
        }

        &::-webkit-scrollbar-thumb {
            background-color: #44474e;
            border: 4px solid #121418;
            border-radius: 99em;
        }
    }

    :root {
        --primary-font: 'Satoshi', sans-serif;
        --mono-font: 'JetBrains Mono', monospace;
    }
</style>
